<body>
<div class="container">
  

  <!-- FORM -->
   

   <div class="container center">
    <h1 class="center">LYRICAL</h1><br />
    
        <form id="myForm" method="post">
            <div class="row">
                <div class="col-4">
                    <label for="artistInput">Artist:</label>
                    <input type="text" class="form-control" id="artistInput" name="artist" required>
                </div>

                <div class="col-4">
                    <label for="titleInput">Title:</label>
                    <input type="text" class="form-control" id="titleInput" name="title" required>
                </div>

                <div class="col-auto align-self-end">
                    <label></label>
                    <input id="get" type="submit" class="btn btn-primary" value="Search" formaction="/get-lyrics">
                </div>
        
            </div>
            

            

            
            
            
        </form>
    </div>
    <br>
  <!-- FORM -->

  
  <% if (locals.lyrics) {%> 
    <!-- Lyrics -->
    <div class="container center">
        <h5><%= locals.artist %> - <%= locals.title  %></h5>

        <%- locals.lyrics.replace(/\r/g, '<br />').replace(/\n/g, '<br />')%>
        
        
    </div>
  <% } else if(locals.error) {%> 
    <!-- Error -->
    <div class="container center">
     
        <%= error %>

    </div>
